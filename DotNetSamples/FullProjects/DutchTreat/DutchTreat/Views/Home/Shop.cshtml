@model IEnumerable<Product>
@{
    ViewData["Title"] = "Shop";
}

<h1>Shop</h1>

<div class="row">
    @foreach(var product in Model)
    {
        <div class="col-sm-3">
            <div class="border  bg-light rounded p-1">
                <img src="~/img/@(product.ArtId).jpg" alt="@product.ArtId" class="img-fluid"/>
                <h3>@product.Category - @product.Size</h3>
                <ul>
                    <li>Price: $@product.Price</li>
                    <li>Artist: @product.Artiist</li>
                    <li>Title: @product.Title</li>
                    <li>Description: @product.ArtDescription</li>
                </ul>
                <button class="btn btn-success" id="buyButton">Buy</button>
            </div>
        </div>
    }
</div>