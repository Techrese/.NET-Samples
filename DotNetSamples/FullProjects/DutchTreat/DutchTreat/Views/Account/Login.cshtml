@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

@using(Html.BeginForm("SignUp","Account"))
{
    @Html.ValidationSummary(true, "Please fix following errors.")
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-sm-6 offset-sm-3">
            <div class="form-group">
                <div class="form-group">
                    @Html.LabelFor(x => x.Username)
                    @Html.TextBoxFor(x => x.Username, new { @class="form-control"})
                    @Html.ValidationMessageFor(x => x.Username)
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Password)
                    @Html.TextBoxFor(x => x.Password, new { @class="form-control"})
                    @Html.ValidationMessageFor(x => x.Password)
                </div>
                <div class="form-group">
                    <div class="form-check">       
                        @Html.LabelFor(x => x.RememberMe, new { @class="form-check-label"})
                        @Html.CheckBoxFor(x => x.RememberMe, new { @class="form-check-input"})                        
                    </div>
                    @Html.ValidationMessageFor(x => x.RememberMe)
                </div>

                <div class="form-group">
                    <button class="btn btn-success" type="submit" value="Login">Login</button>
                    <div>@ViewData["UserMessage"]</div>
                </div>
            </div>
        </div>
    </div>
}

