@page "/"

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.


<EditForm Model="@newUser" OnSubmit="Submit" FormName="testform">
    <div class="col-sm-12">
        <InputText @bind-Value="@newUser.Name"></InputText>
    </div>
    <div class="col-sm-12">
        <button type="submit">Submit</button>
    </div>

</EditForm>


<p></p>


@code {
    User newUser = new();
    string message = default!;


    public void Submit()
    {
        message = newUser.Name;
    }

    public class User
    {
        public int Id { get; set; }
        public string Name { get; set; } = default!;
    }

}